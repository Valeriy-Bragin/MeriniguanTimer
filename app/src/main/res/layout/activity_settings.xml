<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/green_background" />

    <fragment
        android:id="@+id/activity_settings_fragment"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:name="com.example.timer3.SettingsFragment" />

    <ImageView
        android:id="@+id/refreshSettingsImageView"
        android:layout_width="65sp"
        android:layout_height="65sp"
        android:onClick="resetSettings"
        app:srcCompat="@drawable/ic_baseline_refresh_24"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/activity_settings_fragment"/>

</RelativeLayout>